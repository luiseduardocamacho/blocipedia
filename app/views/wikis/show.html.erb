<h1><%= @wiki.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= markdown(@wiki.body) %></p>
      <small>
        submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%=@wiki.user.name %>
       </small>

   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
     <%if policy(@wiki).make_private?%>
        <%= link_to "Delete Post", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
     <%end%>
   </div>
 </div>
